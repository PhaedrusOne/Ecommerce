

<h1>@ViewBag.title</h1>

<form method="post">

    @foreach (var category in ViewBag.categories)
    {
        <input type="checkbox" name="categoryIds" id="@category.ID" value="@category.ID" />
        <label form="@category.ID">@category.Name</label>
        <br />
    }

    <input type="submit" value="Remove Selected Category(s)" />
</form>

