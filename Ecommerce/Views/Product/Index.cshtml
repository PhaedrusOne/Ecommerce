@model List<Ecommerce.Models.Product>

<h1>@ViewBag.Title</h1>

@if (Model.Count == 0)
{
    <p>No products yet!</p>
}

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
            <td>@product.Category.Name</td>
        </tr>
    }
</table> 

<p><a asp-controller="Product" asp-action="Add">Add Product</a></p>