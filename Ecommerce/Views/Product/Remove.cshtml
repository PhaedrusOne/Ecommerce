<h1>@ViewBag.title</h1>

<form method="post">

    @foreach (var product in ViewBag.products)
    {
        <input type="checkbox" name="productIds" id="@product.ID" value="@product.ID" />
        <label form="@product.ID">@product.Name</label>
        <br />
    }

    <input type="submit" value="Remove Selected Product(s)" />
</form>
